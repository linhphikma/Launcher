<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!--<Button
        android:id="@+id/units"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/weather_units"
        android:textColor="#9000"
        android:background="@android:color/transparent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#20020202" />-->

    <EditText android:id="@+id/location_query"
        android:background="@android:color/transparent"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="text"
        android:textIsSelectable="true"
        android:textStyle="italic"
        android:textColor="@android:color/black"
        android:hint="@string/find_location_hint" />

    <ListView android:id="@+id/location_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:scrollbarStyle="outsideInset" />

    <ImageView
        android:id="@+id/powered_by_yahoo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/powered_by_yahoo"
        android:layout_gravity="right" />

</LinearLayout>