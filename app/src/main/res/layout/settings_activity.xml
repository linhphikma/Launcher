<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View
        android:id="@+id/background"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@android:color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="20dp"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/screen_layout_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:text="@string/layout"
                            android:contentDescription="Layout"
                            android:drawablePadding="4dp"
                            android:drawableTop="@drawable/btn_layout"
                            android:gravity="center_horizontal"
                            android:fontFamily="sans-serif-condensed"
                            android:textAllCaps="true"
                            android:textSize="12sp" />
                        <Space
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/visuals_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:text="@string/visuals"
                            android:contentDescription="Visuals"
                            android:drawablePadding="4dp"
                            android:gravity="center_horizontal"
                            android:drawableTop="@drawable/btn_visuals"
                            android:fontFamily="sans-serif-condensed"
                            android:textAllCaps="true"
                            android:textSize="12sp"/>
                        <Space
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/dock_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:text="@string/dock"
                            android:contentDescription="Dock"
                            android:drawablePadding="4dp"
                            android:gravity="center_horizontal"
                            android:drawableTop="@drawable/btn_dock"
                            android:fontFamily="sans-serif-condensed"
                            android:textAllCaps="true"
                            android:textSize="12sp" />

                    </LinearLayout>
</RelativeLayout>
